# 데이터베이스 설정
# 개발: SQLite를 사용하려면 "file:./dev.db"
# 프로덕션: PostgreSQL 연결 문자열 필수
DATABASE_URL="postgresql://user:password@localhost:5432/wedding_ai"

# NextAuth.js 설정
# 프로덕션에서 필수!
# 생성: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
# Google Cloud Console에서 발급
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Kakao Developers에서 발급
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"

# AI 서비스
# Google AI Studio에서 발급
GEMINI_API_KEY="your-gemini-api-key"

# Replicate (선택사항 - AI fallback)
# REPLICATE_API_TOKEN="your-replicate-token"

# Cloudinary 이미지 스토리지
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Stripe 결제
# 개발: pk_test_..., sk_test_...
# 프로덕션: pk_live_..., sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# 환경 설정
NODE_ENV="development"

# 테스트 전용 (개발 환경에서만 사용)
# 프로덕션에서는 절대 사용 금지!
# TEST_SESSION_USER_ID="test-user-id"
